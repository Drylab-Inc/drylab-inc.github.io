---
import { Image } from "astro:assets";
import Card from "./Card.astro";

import gob from "../../assets/icon6.svg";
import wob from "../../assets/icon7.svg";

/* 
1. White card with green title and green on black icon 
2. Green card with white title and green on black icon
3. Black card with white title and white on black icon
*/

const { index, titleTop, titleBottom, img, alt, link } = Astro.props;
---

<Card >
  <div 
    class={`h-[500px] w-[400px] p-8 rounded-[45px]  ${
      index === 1 ? 'bg-[#DEF3D9]' : index === 2 ? 'bg-[#f9e0f2]' : 'bg-dark text-white'
    }`}
  >
    <h3 class="flex flex-col h-1/3 col-span-2 lg:col-span-1">
      <span class="w-[fit-content] font-serif text-4xl">
        {titleTop}
      </span>
      <span class="w-[fit-content] font-sans">
        {titleBottom}
      </span>
    </h3>

    <div class="">

    </div>

    <div class="h-1/3 flex justify-center items-start">
      <Image
        src={img}
        alt={alt}
        height={200}
      />
    </div>

    <div class="flex items-end h-1/3">
      <a href={link} class="flex items-center">
        <!-- <button class="btn-primary hidden sm:block">Service Info</button> -->
         <div>
          <span class="text-red-500 font-bold hover:text-red-700 text-2xl">âœ» In the works</span>
         </div>
      </a>
    </div>

  </div>
</Card>

<style>
  .custom-grid {
    grid-template: auto auto;
  }
</style>
