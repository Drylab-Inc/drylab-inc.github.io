---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";
import Microscope from "../../assets/homeIcons/21.svg";
import DNA from "../../assets/homeIcons/27.svg";


const cards = [
  {
    index: 1,
    titleTop: "Vasco",
    subtitle: "beta",
    titleBottom: "The most complete genome utility tool & browser",
    img: DNA,
    alt: "SEO",
    link: "https://vasco-drylab.vercel.app",
    progress: "90"
  },
  {
    index: 2,
    titleTop: "Niove",
    subtitle: "Coming soon",
    titleBottom: "Next level, user-friendly image processing",
    img: Microscope,
    alt: "SEO",
    link: "#products",
    progress: "20"
  }
];


---


<div>
  <div class="bg-[#FFFFFF] w-full h-[40px]"></div>

  <Section id="products">
    <div class=" bg-[#FFFFFF] flex flex-col items-center pb-48 w-full select-none">
  
      <div class="flex justify-center items-center pt-24 pb-12 bg-gradient-to-r from-rose-900 via-rose-500 to-rose-600 text-transparent bg-clip-text bg-300% animate-gradient w-full text-6xl font-semibold overflow-hidden">
        Products
        
      </div>  
  
      <div class="items-center justify-center flex flex-row space-x-10 w-full">
        <div class="grid lg:grid-cols-2 lg:grid-rows-1 gap-10">
          {
            cards.map((card) => (
              <ServiceCard
                index={card.index}
                titleTop={card.titleTop}
                subtitle={card.subtitle}
                titleBottom={card.titleBottom}
                img={card.img}
                alt={card.alt}
                link={card.link}
                progress={card.progress}
              />
            ))
          }
        </div>
  
      </div>
  
      
  
    </div>
  
  </Section>
  
</div>
