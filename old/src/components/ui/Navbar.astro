---
import { Image } from "astro:assets";

const navLinks = [
{
    name: "Home",
    href: "#home",
  },{
    name: "Products",
    href: "#products",
  },{
    name: "Contact",
    href: "#contact",
  }
];

import bars from "../../assets/bars.svg";
// import brand from "../../assets/brand.jpg";
import brand from "../../assets/dryLogo.svg";

---

<div
  class="bg-[#fff] fixed w-full top-0 z-10 py-4 px-6 h-auto flex justify-between select-none"
>
  <nav
    aria-label="Main Navigation"
    role="navigation"
    class="w-full flex h-full items-center justify-between"
  >
    <!-- Brand -->
    <div class="flex flex-row justify-center items-center pr-20 select-none">
      <a href="#home" class="font-sans items-center text-3xl flex flex-row">
         drylab
      </a>
      <!-- <h2 class="text-xl font-sans">rylab</h2> -->
    </div>

    <!-- Nav Menu -->
    <div
      id="navmenu"
      class="bg-transparent w-fit absolute top-full z-10 md:static flex flex-row items-center overflow-hidden transition-height duration-500 h-0 sm:h-auto"
    >
      <!-- Nav Links -->
      <ul class="flex flex-row space-x-12 text-xl md:visible invisible">
        {
          navLinks.map((link) => {
            return (
              <li class="mx-4 p-4 xl:mx-0 px-0">
                <a id={link.name} href={link.href} class="block font-sans transition duration-150 ease-in-out hover:text-[#D33419]">
                  {link.name}
                </a>
              </li>
            );
          })
        }
      </ul>      

      

    </div>
    <button class="btn-primary text-md" onclick="window.location='mailto:hi@effie.bio'">Contact Us</button>

  </nav>
</div>
