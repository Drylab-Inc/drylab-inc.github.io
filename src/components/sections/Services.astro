---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";
import Microscope from "../../assets/homeIcons/21.svg";
import DNA from "../../assets/homeIcons/27.svg";


const cards = [
  {
    index: 1,
    titleTop: "Vasco",
    titleBottom: "The most complete genome utility tool & browser",
    img: DNA,
    alt: "SEO",
    link: "vasco",
    progress: "40"
  },
  {
    index: 2,
    titleTop: "Niove",
    titleBottom: "Next level, user-friendly image processing",
    img: Microscope,
    alt: "SEO",
    link: "niove",
    progress: "10"
  }
];

const description =
  "";
---

<Section id="products">



  <div class=" bg-[#FFFFFF] flex flex-col items-center pb-20 ">

    <div class="flex justify-center items-center p-[60px] w-full overflow-hidden">
      <SectionTitle
      sectionTitle="Products"
      description=""
    />
      
    </div>  

    <div class="items-start justify-start flex flex-row space-x-10 ">
      <div class="grid lg:grid-cols-2 lg:grid-rows-1 gap-10">
        {
          cards.map((card) => (
            <ServiceCard
              index={card.index}
              titleTop={card.titleTop}
              titleBottom={card.titleBottom}
              img={card.img}
              alt={card.alt}
              link={card.link}
              progress={card.progress}
            />
          ))
        }
      </div>
      <div>

      <div class="h-[500px] w-[400px] p-8 rounded-[45px] bg-gray-50 text-black border-dashed border-4 border-gray-300">
        <h3 class="flex flex-col col-span-2 lg:col-span-1 text-center pt-48 pb-4">
          <span class="w-full font-serif text-4xl">
            More soon ◡̈
          </span>
          

        </h3>
        <button class="btn-primary w-full md:w-auto h-[55px] cursor-pointer" onclick="location.href='#contact'">Tell us what to make next! </button>

      </div>

      </div>
    </div>

    

  </div>

</Section>
